<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="losowanieUczniowKania.StronaSzczegolyKlasy"
             BackgroundColor="Black">

    <StackLayout>
        <Label x:Name="NazwaKlasyLabel" FontSize="Large" HorizontalOptions="Center" TextColor="Black" />
        <Entry x:Name="ImieUczniaEntry" Placeholder="Imię i nazwisko ucznia" BackgroundColor="WhiteSmoke"  Margin="0,0,0,10" TextColor="Black" />
        <Button Text="Dodaj ucznia" BackgroundColor="CornflowerBlue" TextColor="White" Margin="0,0,0,10" Clicked="DodajUcznia" />
        <Button Text="Losuj ucznia" BackgroundColor="CornflowerBlue" TextColor="White" Margin="0,0,0,10" Clicked="LosujUcznia" />
        <Button Text="Usuń ucznia" BackgroundColor="Firebrick" TextColor="White" Margin="0,0,0,10" Clicked="UsunUcznia" />
        <ListView x:Name="ListaUczniowView"/>
        <Label x:Name="WylosowanyUczenLabel" FontSize="Large" HorizontalOptions="Center" TextColor="White" />
    </StackLayout>
</ContentPage>